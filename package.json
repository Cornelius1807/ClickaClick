{
  "name": "clickaclick-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Plataforma de alfabetización digital para adultos mayores en Perú",
  "scripts": {
    "dev": "concurrently \"pnpm --filter=@clickaclick/frontend dev\" \"pnpm --filter=@clickaclick/backend dev\"",
    "dev:frontend": "pnpm --filter=@clickaclick/frontend dev",
    "dev:backend": "pnpm --filter=@clickaclick/backend dev",
    "build": "pnpm --filter=@clickaclick/frontend build && pnpm --filter=@clickaclick/backend build",
    "start": "pnpm --filter=@clickaclick/backend start",
    "lint": "pnpm --filter=./packages -r exec eslint .",
    "type-check": "pnpm --filter=./packages -r exec tsc --noEmit"
  },
  "keywords": [
    "adultos-mayores",
    "alfabetizacion-digital",
    "peru",
    "nextjs",
    "typescript"
  ],
  "author": "ClickaClick Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.13.1"
}
