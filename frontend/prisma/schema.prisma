generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id          String      @id @default(cuid())
  userAnonId  String      @db.VarChar(50)
  device      String      @db.VarChar(20)
  startedAt   DateTime    @default(now())
  endedAt     DateTime?
  seqAnswered Boolean     @default(false)
  messages    Message[]
  surveys     SurveySEQ[]

  @@index([userAnonId])
  @@index([startedAt])
}

model Message {
  id                  String   @id @default(cuid())
  sessionId           String
  userText            String
  botText             String
  intentId            String?
  confidence          Float?
  latencyMs           Int?
  escalatedToWhatsapp Boolean  @default(false)
  retryCount          Int      @default(0)
  createdAt           DateTime @default(now())
  intent              Intent?  @relation(fields: [intentId], references: [id])
  session             Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([intentId])
  @@index([escalatedToWhatsapp])
}

model Intent {
  id          String         @id @default(cuid())
  name        String         @db.VarChar(100)
  deviceScope String         @db.VarChar(20)
  answerText  String
  updatedAt   DateTime       @updatedAt
  createdAt   DateTime       @default(now())
  guides      Guide?
  phrases     IntentPhrase[]
  messages    Message[]
  videos      Video[]

  @@index([deviceScope])
}

model IntentPhrase {
  id       String @id @default(cuid())
  intentId String
  phrase   String @db.VarChar(255)
  intent   Intent @relation(fields: [intentId], references: [id], onDelete: Cascade)

  @@unique([intentId, phrase])
  @@index([intentId])
}

model Guide {
  id        String @id @default(cuid())
  intentId  String @unique
  stepsJson String
  intent    Intent @relation(fields: [intentId], references: [id], onDelete: Cascade)

  @@index([intentId])
}

model Video {
  id              String   @id @default(cuid())
  intentId        String
  device          String   @db.VarChar(20)
  youtubeId       String?  @db.VarChar(50)
  title           String   @db.VarChar(255)
  durationSeconds Int?
  createdAt       DateTime @default(now())
  intent          Intent   @relation(fields: [intentId], references: [id], onDelete: Cascade)

  @@unique([intentId, device])
  @@index([intentId])
  @@index([device])
}

model SurveySEQ {
  id        String   @id @default(cuid())
  sessionId String
  score     Int
  createdAt DateTime @default(now())
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([createdAt])
}

model SupportConfig {
  id        String   @id @default(cuid())
  timezone  String   @default("America/Lima") @db.VarChar(50)
  hoursJson String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model SupportContact {
  id        String   @id @default(cuid())
  name      String   @db.VarChar(100)
  phoneE164 String   @db.VarChar(20)
  isActive  Boolean  @default(true)
  isOnline  Boolean  @default(false)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@index([isActive])
  @@index([isOnline])
}

model BotChangeLog {
  id          String   @id @default(cuid())
  adminUser   String   @db.VarChar(100)
  action      String   @db.VarChar(50)
  payloadJson String
  createdAt   DateTime @default(now())

  @@index([adminUser])
  @@index([createdAt])
}
